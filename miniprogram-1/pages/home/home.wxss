/* pages/home/home.wxss */
@font-face {
  font-family: "iconfont";
  /* Project id  */
  src: url('iconfont.ttf?t=1635472939015') format('truetype');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-RectangleCopy:before {
  content: "\e6a1";
}

.icon-RectangleCopy1:before {
  content: "\e6a2";
}


.page {
  padding: 20px 0;
}

.quadrant {
  display: flex;
  height: 100px;
}

.quad-block {
  width: 100%;
}

.one {
  background-color: #879ef3;
}

.second {
  background-color: #515e90;
}

.three {
  background-color: #7791ee;
}

.four {
  background-color: #7A85AD;
}

.item-todo {
  display: flex;
  align-content: center;
  margin: 10px 20px;
  height: 50px;
  line-height: 45px;
  padding-left: 10px;
  background-color: #e4e6f0;
  border-radius: 10px;
  border-left: 10px solid #7791ee;

}

.time {
  color: #999999;
  margin: 0px 10px 0 5px;
  padding-top: 2px;
  font-size: 12px;
}

.content {
  padding-top: 2px;
  color: #091e86;
  font-size: 14px;
}

.complete {
  animation: example 2s ease;
  transform: translateY(200px);
  opacity: 0.5;
}

@keyframes example {
  0% {
    transform: translateY(0px);
    opacity: 1;
  }

  100% {
    transform: translateY(200px);
    opacity: 0.5;
  }
}

/* .complete {
  opacity: 0.1;
} */

.complete .content {
  text-decoration: line-through;
  color: #999999;
}

.add-todo-container {
  position: fixed;
  bottom: 0;
  background: #e45e45;
  width: 100%;
  height: 450px;
  border-radius: 100px 100px 0 0;
  animation: bgContainer 1s;
}

@keyframes bgContainer {
  0% {
    height: 0px;
  }

  100% {
    height: 450px;
  }
}

.close-icon {
  position: relative;
  top: -50px;
  box-shadow: indianred;
}

.add-todo-icon {
  text-align: center;
  width: 50px;
  height: 50px;
  line-height: 44px;
  margin: 0 auto;
  background-color: lightblue;
  border-radius: 50%;
  box-shadow: lightblue 2px 2px 6px;
  position: absolute;
  bottom: 30px;
}

.icon-plus {
  font-size: 28px;
  color: #ffffff;
}

.add-todo-icon.close {
  animation: icon 1s 0.01s;
  
}

@keyframes icon {
  0% {
    top: 400px;
  }

  100% {
    top: 30px;
  }
}

.icon-close {
  font-size: 20px;
  color: #ffffff;
  font-family: unset;
}