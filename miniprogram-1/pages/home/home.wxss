/* pages/home/home.wxss */
.page {
  padding: 20px 0;
}

.quadrant {
  display: flex;
  height: 100px;
}

.quad-block {
  width: 100%;
}

.one {
  background-color: #879ef3;
}

.second {
  background-color: #515e90;
}

.three {
  background-color: #7791ee;
}

.four {
  background-color: #7A85AD;
}

.item-todo {
  display: flex;
  align-content: center;
  margin: 10px 20px;
  height: 50px;
  line-height: 45px;
  padding-left: 10px;
  background-color: #e4e6f0;
  border-radius: 10px;
  border-left: 10px solid #7791ee;

}

.time {
  color: #999999;
  margin: 0px 10px 0 5px;
  padding-top: 2px;
  font-size: 12px;
}

.content {
  padding-top: 2px;
  color: #091e86;
  font-size: 14px;
}

.complete {
  text-decoration: line-through;
  color: #999999;
}